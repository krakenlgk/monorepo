{
  "name": "@monorepo/shared",
  "version": "1.0.0",
  "private": true,
  "description": "Shared utilities and types for the monorepo",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:clean": "npm run clean && tsc --build",
    "dev": "tsc --build --watch",
    "clean": "rm -rf dist",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "lint:check": "eslint \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build:clean"
  },
  "keywords": [
    "shared",
    "utilities",
    "types",
    "monorepo"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "typescript": "^5.0.0"
  }
}
